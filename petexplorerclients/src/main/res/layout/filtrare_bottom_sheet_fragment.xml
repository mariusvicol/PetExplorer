<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- SearchView cu fundal și border -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Caută opțiune de filtrare"
        android:background="@drawable/searchview_background"
        android:layout_marginBottom="16dp" />

    <!-- Container pentru butoane -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/filterButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magazine veterinare"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/filterButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Farmacii veterinare"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/filterButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cabinete disponibile"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/filterButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toate animalele" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inchide"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</LinearLayout>
